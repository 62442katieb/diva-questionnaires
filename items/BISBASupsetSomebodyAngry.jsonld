{
    "@context": "https://raw.githubusercontent.com/ReproNim/schema-standardization/master/contexts/generic",
    "@type": "https://raw.githubusercontent.com/ReproNim/schema-standardization/master/schemas/Field",
    "schema:schemaVersion": "0.0.1",
    "schema:version": "0.0.1",
    "@id": "BISBASupsetSomebodyAngry",
    "skos:prefLabel": "BIS question about feeling worried when somebody is angry with you",
    "skos:altLabel": "BIS3",
    "schema:description": "asks participant if they get upset/worried when they think/know somebody is angry with them",
    "question": "I feel pretty worried or upset when I think or know somebody is angry at me.",
    "ui": {
        "inputType": "radio",
        "allow": [
            "autoAdvance"
        ]
    },
    "responseOptions": {
        "minValue": 1,
        "maxValue": 4,
        "requiredValue": true,
        "choices": [
            {
                "schema:name": "1 - very true for me",
                "schema:value": 1
            },
            {
                "schema:name": "2 - somewhat true for me",
                "schema:value": 2
            },
            {
                "schema:name": "3 - somewhat false for me",
                "schema:value": 3
            },
            {
                "schema:name": "4 - very false for me",
                "schema:value": 4
            }
        ]
    }
}