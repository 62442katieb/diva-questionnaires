{
    "@context": "https://raw.githubusercontent.com/ReproNim/schema-standardization/master/contexts/generic",
    "@type": "https://raw.githubusercontent.com/ReproNim/schema-standardization/master/schemas/Field",
    "schema:schemaVersion": "0.0.1",
    "schema:version": "0.0.1",
    "@id": "BISBASopportunityExcited",
    "skos:prefLabel": "BAS Reward Responsiveness question about getting excited by an opportunity",
    "skos:altLabel": "BASRR3",
    "schema:description": "asks participant if they get excited when they see an opportunity to get something they like",
    "question": "When I see an opportunity for something I like I get excited right away.",
    "ui": {
        "inputType": "radio",
        "allow": [
            "autoAdvance"
        ]
    },
    "responseOptions": {
        "minValue": 1,
        "maxValue": 4,
        "requiredValue": true,
        "choices": [
            {
                "schema:name": "1 - very true for me",
                "schema:value": 1
            },
            {
                "schema:name": "2 - somewhat true for me",
                "schema:value": 2
            },
            {
                "schema:name": "3 - somewhat false for me",
                "schema:value": 3
            },
            {
                "schema:name": "4 - very false for me",
                "schema:value": 4
            }
        ]
    }
}