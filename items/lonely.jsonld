{
    "@context": "https://raw.githubusercontent.com/ReproNim/schema-standardization/master/contexts/generic",
    "@type": "https://raw.githubusercontent.com/ReproNim/schema-standardization/master/schemas/Field",
    "schema:schemaVersion": "0.0.1",
    "schema:version": "0.0.1",
    "@id": "lonely",
    "skos:prefLabel": "asking how lonely ppt has felt during the past week",
    "skos:altLabel": "lonely",
    "schema:description": "asking how lonely ppt has felt during the past week, on a scale from 1 to 5",
    "question": "How **lonely** have you felt during the past week?",
    "ui": {
        "inputType": "radio",
        "allow": [
            "autoAdvance"
        ]
    },
    "responseOptions": {
        "minValue": 1,
        "maxValue": 5,
        "requiredValue": true,
        "choices": [
            {
                "schema:name": "1 - very slightly or not at all",
                "schema:value": 1
            },
            {
                "schema:name": "2 - a little",
                "schema:value": 2
            },
            {
                "schema:name": "3 - moderately",
                "schema:value": 3
            },
            {
                "schema:name": "4 - quite a bit",
                "schema:value": 4
            },
            {
                "schema:name": "5 - extremely",
                "schema:value": 5
            }
        ]
    }
}